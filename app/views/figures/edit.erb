<h1>Edit an Existing Figure</h1>
<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="patch">
  <p>Name:
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

  <p>Title:<br>
  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]"<%= 'checked' if @figure.titles.include?(title) %>>
    <%= title.name %>
  <% end %>
  <p>Add New Title:<br>
    <input type="text" id="new_title" name="title[name]">

  <p>Landmark:<br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.name %>" value="<%= landmark.id %>" name="figure[landmark_ids][]" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
    <%=landmark.name %>
  <% end %>
  <p>Add New Landmark:<br>
    <input type="text" id="new_landmark" name="landmark[name]">

  <p><input type="submit" id="submit" value="Edit Figure">
</form>
